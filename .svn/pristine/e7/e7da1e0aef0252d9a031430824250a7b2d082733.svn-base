.vmc-centered {
	padding: 10px 0;
}

.vmc-centered img {
	transition: all 0.3s ease;
}

.vmc-centered .vmc_active img {
	transform: scale(1.2);
}

body {
	position: absolute;
	margin: 0;
	width: 100%;
	height: 100%;
	background: #1c2b36;
	color: #D5D6E2;
}

.screen {
	position: relative;
	width: 98%;
	height: 96%;
	margin-top: 1%;
	margin-left: 1%;
}

.screen-top {
	position: relative;
	width: 100%;
	height: 25%;
	background-color: aliceblue;
}

.screen-top-data {
	position: relative;
	float: left;
	width: 10%;
	height: 80%;
	top: 20%;
	background-color: #bab4bf;
}

.screen-top-chart {
	position: relative;
	float: left;
	width: 25%;
	height: 80%;
	top: 20%;
	background-color: #b394d1;
}

.screen-top-title {
	position: azimuth;
	float: left;
	width: 30%;
	height: 100%;
	background-color: #000000;
}

.screen-top-liquid {
	position: relative;
	float: right;
	width: 35%;
	height: 80%;
	top: 20%;
	background-color: #b394d1;
}

.screen-left {
	position: relative;
	float: left;
	width: 50%;
	height: 75%;
	background-color: #4a647b;
}

.slide-title {
	position: relative;
	width: 100%;
	height: 10%;
}

.slide-container {
	position: relative;
	width: 100%;
	height: 90%;
}

.slide-list {
	position: relative;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	color: #ffffff;
	margin: 0;
	padding: 0;
}

.title {
	position: relative;
	width: 100%;
	left: 1px;
	height: 68.4px;
	line-height: 68.4px;
	list-style: none;
	font-size: 25px;
	border-width: 1px;
	white-space: nowrap;
	border-style: solid;
	border-color: #3d4c57;
}

.slide-list li {
	height: 68.4px;
	line-height: 68.4px;
	list-style: none;
	padding: 0 0px;
	border-width: 1px;
	border-style: solid;
	border-color: #a9c6c9;
	color: #ffffff;
}

.slide-list li span {
	margin: 0;
	overflow: hidden;
	height: 66px;
	border-width: 1px;
	border-style: solid;
	border-color: #a9c6c9;
	white-space: nowrap;
	display: inline-block;
	text-overflow: ellipsis;
}

